---
import Footer from "@/components/footer.astro";
import Header from "@/components/header.astro";

const { title } = Astro.props;

import "@/styles/global.css";
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Pablo García Rius - Software Engineer</title>
    <meta
      name="description"
      content="Pablo García Rius is a Software Engineer with a master's degree in Software Engineering and Management. Experienced in full-stack development using React, Astro, Next.js, Node.js, Express, and Python."
    />

    <!-- <link rel="manifest" href="/site.webmanifest" /> -->

    <meta property="og:title" content="Pablo García Rius - Software Engineer" />
    <meta property="og:image" content="/images/Profile_blur.png" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://pablogrius.com" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Pablo García Rius - Software Engineer"
    />
    <meta
      name="twitter:description"
      content="Pablo García Rius is a software Engineering with master's degree, looking for entry-level experience, eperienced in fulll-stack development with tools such as: React, Astro, NextJs, Node, Express, Spring."
    />
    <meta name="twitter:image" content="/images/Profile_blur.png" />

    <meta name="theme-color" content="#155dfc" />
    <link rel="canonical" href="https://pablogrius.com" />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Pablo García Rius",
        "url": "https://pablogrius.com",
        "sameAs": [
          "https://www.linkedin.com/in/pablo-rius",
          "https://github.com/PabloRius"
        ],
        "jobTitle": "Software Engineer",
        "description": "Full-stack developer with a master's in Software Engineering. Experienced in React, Astro, Next.js, Node.js, Express, and Python.",
        "image": "https://pablogrius.com/images/Profile_blur.png"
      }
    </script>
  </head>
  <body title={title}>
    <div class="flex min-h-screen flex-col">
      <Header />
      <div class="flex-1"><slot /></div>
      <Footer />
    </div>
  </body>
</html>
