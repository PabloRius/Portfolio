---
import GithubLink from "./links/github-link.astro";
import InstagramLink from "./links/instagram-link.astro";
import LinkedinLink from "./links/linkedin-link.astro";
---

<footer class="border-t py-8 bg-slate-50 dark:bg-slate-900/50">
  <div
    class="flex flex-col items-center justify-between px-6 gap-4 md:flex-row"
  >
    <div>
      <a
        href="/"
        class="font-bold text-xl text-blue-600 dark:text-blue-500 mb-2 inline-block"
      >
        Pablo García Rius
      </a>
      <p class="text-sm text-muted-foreground">
        © {new Date().getFullYear()} Pablo García Rius. All rights reserved.
      </p>
    </div>
    <div class="flex items-center gap-6">
      <GithubLink />
      <LinkedinLink />
      <InstagramLink />
    </div>
  </div>
</footer>
